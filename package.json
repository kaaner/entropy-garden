{
  "name": "entropy-garden",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter @entropy-garden/web dev",
    "dev:mobile": "pnpm --filter @entropy-garden/mobile start",
    "build": "pnpm --filter @entropy-garden/engine build && pnpm --filter @entropy-garden/ai build && pnpm --filter @entropy-garden/web build",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter @entropy-garden/engine test && pnpm --filter @entropy-garden/ai test",
    "test:web": "pnpm --filter @entropy-garden/web test",
    "test:coverage": "pnpm -r test:coverage",
    "test:ui": "pnpm --filter @entropy-garden/web test:ui",
    "lint": "pnpm -r lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.3",
    "vitest": "4.0.15"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}